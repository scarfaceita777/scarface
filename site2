<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Listino Prezzi</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; background: #f9f9f9; }
    header { background: #333; padding: 15px; text-align: center; }
    nav a { color: white; margin: 0 15px; text-decoration: none; font-weight: bold; }
    nav a:hover { text-decoration: underline; }
    table { width: 90%; margin: 30px auto; border-collapse: collapse; background: white; }
    th, td { border: 1px solid #ddd; padding: 12px; text-align: center; }
    th { background: #333; color: white; }
    #searchInput { 
      display: block; 
      width: 90%; 
      margin: 20px auto; 
      padding: 10px; 
      border-radius: 8px; 
      border: 1px solid #ccc; 
      font-size: 16px; 
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="index.html">Home</a>
      <a href="galleria.html">Galleria</a>
      <a href="listino.html">Listino</a>
      <a href="contatti.html">Contatti</a>
    </nav>
  </header>

  <input type="text" id="searchInput" placeholder="Cerca un prodotto...">

  <table id="listino">
    <tr>
      <th>Prodotto</th>
      <th>Descrizione</th>
      <th>Prezzo</th>
    </tr>
    <tr>
      <td>Prodotto A</td>
      <td>Descrizione breve A</td>
      <td>€20</td>
    </tr>
    <tr>
      <td>Prodotto B</td>
      <td>Descrizione breve B</td>
      <td>€35</td>
    </tr>
    <tr>
      <td>Prodotto C</td>
      <td>Descrizione breve C</td>
      <td>€50</td>
    </tr>
  </table>

  <script>
    document.getElementById("searchInput").addEventListener("keyup", function() {
      let filter = this.value.toLowerCase();
      let rows = document.querySelectorAll("#listino tr");
      rows.forEach((row, index) => {
        if (index === 0) return;
        row.style.display = row.textContent.toLowerCase().includes(filter) ? "" : "none";
      });
    });
  </script>
</body>
